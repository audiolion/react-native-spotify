{
  "name": "echobind-spotify",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --collectCoverage",
    "tsc": "tsc -p ./tsconfig.json",
    "lint": "eslint src/**/*.{ts,tsx}",
    "service:download": "apollo service:download spotify-schema.json --endpoint=https://spotify-api-graphql-console.herokuapp.com/graphql",
    "client:codegen": "apollo client:codegen --queries=src/**/*.ts,src/**/*.tsx --localSchemaFile=./spotify-schema.json --namespace=spotify --outputFlat --addTypename --target=typescript ./spotify-graphql-types.ts && node ./fetch-fragments.js",
    "types:regen": "yarn service:download && yarn client:codegen"
  },
  "dependencies": {
    "@apollo/react-common": "^3.0.1",
    "@apollo/react-components": "^3.0.1",
    "@apollo/react-hooks": "^3.0.1",
    "@react-native-community/async-storage": "^1.6.1",
    "@ryanar/hooks": "^0.2.3",
    "apollo": "^2.18.0",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.12",
    "apollo-link-context": "^1.0.18",
    "apollo-link-error": "^1.1.11",
    "apollo-link-http": "^1.5.15",
    "date-fns": "^2.0.1",
    "graphql": "^14.5.4",
    "graphql-tag": "^2.10.1",
    "query-string": "^6.8.3",
    "react": "16.8.6",
    "react-native": "0.60.3",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.2.0",
    "react-native-screens": "^1.0.0-alpha.23",
    "react-native-typography": "^1.4.1",
    "react-navigation": "^4.0.0",
    "react-navigation-stack": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/runtime": "^7.5.0",
    "@react-native-community/eslint-config": "^0.0.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-native": "^0.60.1",
    "@types/react-test-renderer": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.x",
    "babel-jest": "^24.1.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "jest": "^24.1.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-junit": "^8.0.0",
    "metro-react-native-babel-preset": "^0.54.1",
    "node-fetch": "^2.6.0",
    "react-native-testing-library": "^1.11.1",
    "react-test-renderer": "16.8.6",
    "reactotron-react-native": "^3.6.5",
    "typescript": "^3.5.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|react-navigation|@react-navigation/.*|@react-native-community/.*))"
    ],
    "setupFiles": [
      "./jestSetup.js",
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
